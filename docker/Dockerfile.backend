# Build stage
FROM mcr.microsoft.com/dotnet/sdk:9.0 AS build
WORKDIR /src
COPY PraPdBL-Backend.csproj ./
RUN dotnet restore "PraPdBL-Backend.csproj"
COPY . ./
RUN dotnet publish "PraPdBL-Backend.csproj" -c Release -o /app/publish

# Runtime stage
FROM mcr.microsoft.com/dotnet/aspnet:9.0 AS runtime
WORKDIR /app
ENV ASPNETCORE_URLS=http://+:5000
EXPOSE 5000
COPY --from=build /app/publish ./
ENTRYPOINT ["dotnet", "PraPdBL-Backend.dll"]
